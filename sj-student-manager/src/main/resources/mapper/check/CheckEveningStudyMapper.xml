    </sql>

    <!--查年级-->
    <select id="selectYearSessionInfoByLimit" resultMap="YearResultMap" parameterType="Integer">
        select <include refid="Year_Column_List"/>
        from t_year_session_info order by year_session desc  limit #{number} ;
    </select>

    <!--查班级-->
    <select id="selectClassInfoByGrade" resultMap="ClassResultMap">
        select <include refid="Class_Column_List"/>
        from t_class_info
        where class_name in
        <foreach collection="list" open="(" separator="," close=")" item="grade" index="index" >
          #{grade.yearSession}
        </foreach>
    </select>


    <!--查学生-->
    <select id="selectUserByClassName" resultMap="UserResultMap">
        select <include refid="User_Column_List"/>
        FROM
        t_user u,
        t_role r,
        t_permission p,
        t_role_permission rp,
        t_position ps,
        t_dept d
        WHERE
        u.role_ID=r.roleId
        AND r.roleId=rp.role_Id
        AND p.permissionId=rp.permission_Id
        and ps.positionId=u.position
        and d.depId=u.dept
        and u.status &gt;= 0
        and u.class_name in
        <foreach collection="array" open="(" separator="," close=")" item="classname" index="index">
            #{classname}
        </foreach>
    </select>

    <select id="selectDemeritByType" resultMap="DemeritResultMap" parameterType="String">
        select <include refid="Demerit_Column_List"/>
        from t_demerit
        where d_type like #{type};
    </select>

    <insert id="insertCheckEveningStudy">
        insert into t_check_evening_study (studentid,d_code,status,create_time,create_user)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.studentid},#{item.dCode},0,#{item.createTime},#{item.createUser})
        </foreach>

    </insert>

    <select id="selectCheckEveningStudyByTime" resultMap="BaseResultMap" parameterType="String">
        select <include refid="Base_Column_List"/>
        from t_check_evening_study es left join t_user u
        on es.studentid = u.studentid
        left join t_demerit d
        on es.d_code = d.d_code
        where to_days(es.create_time) = to_days(now())
        and u.class_name in
        <foreach collection="array" open="(" separator="," close=")" item="classname" index="index">
            #{classname}
        </foreach>
        order by class_name,es.studentid;
    </select>

